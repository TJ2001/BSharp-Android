<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shell_ui.LoadActivity"
    android:background="#ffff00"
    android:id="@+id/rLayout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".15" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:rotation="-22.5"
            android:id="@+id/bLayout"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:id="@+id/bCard"
                android:src="@drawable/blank_card"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/bCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="B"
                android:textColor="#000000"
                android:layout_alignLeft="@+id/bCard"
                android:layout_alignTop="@+id/bCard"
                android:layout_alignRight="@+id/bCard"
                android:layout_alignBottom="@+id/bCard"
                android:textSize="50sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".35"
            android:rotation="22.5"
            android:id="@+id/sLayout"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:id="@+id/sharpCard"
                android:src="@drawable/blank_card"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/sharpCardText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="#"
                android:textColor="#000000"
                android:layout_alignLeft="@+id/sharpCard"
                android:layout_alignTop="@+id/sharpCard"
                android:layout_alignRight="@+id/sharpCard"
                android:layout_alignBottom="@+id/sharpCard"
                android:textSize="50sp" />

        </RelativeLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".15" />
    </LinearLayout>



</RelativeLayout>
