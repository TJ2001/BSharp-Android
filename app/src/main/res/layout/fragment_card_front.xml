<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/frontCardImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/card_front"
        android:padding="20dp"/>

    <TextView
        android:id="@+id/frontCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="This is the front of the card. Q: What's your favorite color?"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/frontCardImage"
        android:layout_alignTop="@+id/frontCardImage"
        android:layout_alignRight="@+id/frontCardImage"
        android:layout_alignBottom="@+id/frontCardImage"
        android:textSize="35sp"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"/>


</RelativeLayout>